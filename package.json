{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "vite preview",
    "lint": "prettier --check src && tsc --noEmit && svelte-check --fail-on-warnings && eslint --max-warnings 0 src",
    "format": "eslint --fix src && prettier --write .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|ts|svelte)": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.(svelte|ts)": [
      "svelte-check --fail-on-warnings"
    ],
    "*.(ts|svelte|json|scss|md)": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.4",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-triple": "^2.0.7",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-svelte": "^3.5.1",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "sass": "^1.86.3",
    "svelte": "^5.25.8",
    "svelte-check": "^4.1.5",
    "svelte-preprocess": "^6.0.3",
    "typescript": "~5.8.3",
    "vite": "^6.2.5"
  },
  "dependencies": {
    "@babylonjs/core": "^8.1.1",
    "@babylonjs/gui": "^8.1.1",
    "@babylonjs/gui-editor": "^8.1.1",
    "@babylonjs/inspector": "^8.1.1",
    "@babylonjs/loaders": "^8.1.1",
    "@babylonjs/materials": "^8.1.1",
    "@babylonjs/serializers": "^8.1.1"
  }
}
