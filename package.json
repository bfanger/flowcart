{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "vite preview",
    "lint": "prettier --check --loglevel=warn 'src/**/*.svelte' && tsc --noEmit && svelte-check --fail-on-warnings --fail-on-hints && eslint --max-warnings 0 src",
    "format": "prettier --write . && eslint --fix src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --max-warnings 0 --ext ts,tsx --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.svelte": [
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.1",
    "@sveltejs/kit": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.2",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.54.5",
    "svelte": "^3.49.0",
    "svelte-check": "^3.0.1",
    "svelte-preprocess": "^5.0.0",
    "typescript": "^4.8.2",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "@babylonjs/core": "^5.21.0",
    "@babylonjs/gui": "^5.21.0",
    "@babylonjs/gui-editor": "^5.21.0",
    "@babylonjs/inspector": "^5.21.0",
    "@babylonjs/loaders": "^5.21.0",
    "@babylonjs/materials": "^5.21.0",
    "@babylonjs/serializers": "^5.21.0"
  }
}
