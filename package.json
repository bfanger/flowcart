{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "vite preview",
    "lint": "prettier --check src && tsc --noEmit && svelte-check --fail-on-warnings && eslint --max-warnings 0 src",
    "format": "eslint --fix src && prettier --write .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|ts|svelte)": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.(svelte|ts)": [
      "svelte-check --fail-on-warnings"
    ],
    "*.(ts|svelte|json|scss|md)": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-triple": "^2.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.13.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "sass": "^1.97.1",
    "svelte": "^5.46.1",
    "svelte-check": "^4.3.5",
    "svelte-preprocess": "^6.0.3",
    "typescript": "~5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@babylonjs/core": "^8.43.0",
    "@babylonjs/gui": "^8.43.0",
    "@babylonjs/gui-editor": "^8.43.0",
    "@babylonjs/inspector": "^8.43.0",
    "@babylonjs/loaders": "^8.43.0",
    "@babylonjs/materials": "^8.43.0",
    "@babylonjs/serializers": "^8.43.0"
  }
}
