{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "vite preview",
    "lint": "prettier --check src && tsc --noEmit && svelte-check --fail-on-warnings && eslint --max-warnings 0",
    "format": "eslint --fix && prettier --write .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|ts|svelte)": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.(svelte|ts)": [
      "svelte-check --fail-on-warnings"
    ],
    "*.(ts|svelte|json|scss|md)": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@babylonjs/core": "^8.46.2",
    "@babylonjs/gui": "^8.46.2",
    "@babylonjs/gui-editor": "^8.46.2",
    "@babylonjs/inspector": "^8.46.2",
    "@babylonjs/loaders": "^8.46.2",
    "@babylonjs/materials": "^8.46.2",
    "@babylonjs/serializers": "^8.46.2",
    "@eslint/js": "^9.39.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "babylonjs-gltf2interface": "^8.46.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript"
    }
  }
}
